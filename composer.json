{
  "name": "avo/mvc-application",
  "description": "A PHP MVC Application",
  "license": "MIT",
  "type": "project",

  "require": {
    "php": "^8.1",
    "ext-pdo": "*"
  },

  "autoload": {
    "psr-4": {
      "App\\": "app/"
    }
  },

  "config": {
    "preferred-install": "dist",
    "sort-packages": true,
    "optimize-autoloader": true,
    "vendor-dir": "vendor"
  },

  "minimum-stability": "dev",
  "prefer-stable": true
}
